template(name="dashboardHeading")
  if _id
    .box.col-md-6
      h3.blue
        i.fa.fa-database
        span Data Sources 
        span.badge= dataSources

        button.btn.btn-info Add Harvest
    .box.col-md-3#records
      h3.green
        i.fa.fa-file
        span Total Records
        span.badge= records
    .box.col-md-3#errors
      h3.red
        i.fa.fa-warning
        span Bad Records
        span.badge= errors
  else
    .box.col-md-12#sources-box
      h3.blue
        i.fa.fa-database
        span Data Sources 
        span.badge= dataSources

        button.btn.btn-info Add Harvest
