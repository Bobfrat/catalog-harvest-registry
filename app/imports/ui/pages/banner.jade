template(name="MainBanner")
  header
    .container-fluid
      a(href="#{absoluteUrl}")
        img(src="{{absoluteUrl 'images/IOOS_Emblem_Tertiary_B_RGB.png'}}")
    nav.navbar.navbar-default
      .container-fluid
        .navbar-header
          button.navbar-toggle.collapsed(type="button" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar")
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
          .mobile-logo
          a.navbar-brand(href="#{absoluteUrl}")
            img(src="{{absoluteUrl 'images/logo-navbar.png'}}")
        #navbar.collapse.navbar-collapse
          ul.nav.navbar-nav
            li.brand
              a(href="#{absoluteUrl}")
                img(alt="IOOS logo" src="{{absoluteUrl 'images/logo-navbar.png'}}")
            li
              a(href="#" onclick="return false;")
                | Home
            li.right-item
              a(href="#" onclick="return false;") Help
            li.right-item
              a(href="#" onclick="return false;") About
            +if isLoggedIn
              li.right-item
                a#logout(href="#" onclick="return false;") Logout



